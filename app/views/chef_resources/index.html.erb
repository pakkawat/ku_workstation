<p id="notice"><%= notice %></p>

<h1>Listing Chef Resources</h1>

<table>
  <thead>
    <tr>
      <th>Resource type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chef_resources.each do |chef_resource| %>
      <tr>
        <td><%= chef_resource.resource_type %></td>
        <td><%= link_to 'Show', chef_resource %></td>
        <td><%= link_to 'Edit', edit_chef_resource_path(chef_resource) %></td>
        <td><%= link_to 'Destroy', chef_resource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chef resource', new_chef_resource_path %>



<%= button_to 'Add new action', new_chef_resource_path, :class => "btn btn-success", :method => :get %>
<br>
<div class="panel panel-primary">
  <!-- Default panel contents -->
  <div class="panel-heading">Action index</div>
  <br>
  	<table id="" class="datatable_display table table-striped">
  		<thead>
  			<tr>
  				<th>Action ID</th>
  				<th>Action type</th>
  				<th>Related program</th>
  				<th>Action</th>
  			</tr>
  		</thead>
  		<tbody>
  			<%= render @chefresources %>
  		</tbody>
	</table>
</div>
