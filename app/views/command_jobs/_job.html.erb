<% jobs.each do |job| %>
<div class="job">

	<% if !job.last_error.nil? %>
			<div class="row">
				<div class="col-sm-12">
					<div class="progress-status text-danger">
						<%= job.last_error %>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col-sm-12">
				<div class="progress">
					<div class="progress-bar progress-bar-danger" style="width:100%">
					</div>
				</div>
				</div>
			</div>
	<% else %>
		<% progress=0 %>
		<% if job.progress_max != 0 %>
			<% progress = ((job.progress_current.to_f / job.progress_max) * 100).round %>
		<% end %>
			<div class="row">
				<div class="col-sm-12">
					<div class="progress-status text-primary">
						<%= "Job id:"+job.id.to_s+" Task:"+job.progress_current.to_s + '/' + job.progress_max.to_s + " Detail: " + job.description %>
						<span class="pull-right">

							<%= button_to 'Delete', command_job_path(job), :class => "btn btn-default", :method => :delete, :disabled => job.id == Delayed::Job.first.id?false:true %>
						</span>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col-sm-12">
				<div class="progress">
					<%= content_tag(:div, progress.to_s + "%", :style => "width:"+progress.to_s+"%;", :class => "progress-bar") %>
					<!-- <div class="progress-bar progress-bar-danger"></div> -->
				</div>
				</div>
			</div>

	<% end %>


</div><!-- div class="job"> -->
<% end %>