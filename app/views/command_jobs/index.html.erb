<div class="row">
  <div class="col-sm-12">
  	<% @jobs.each do |job| %>
  		<div class="job">




			<% if job.last_error.nil? %>
	  			<div class="row">
	  				<div class="col-sm-12">
	  					<div class="progress-status text-danger">
	  						<%= job.last_error %>
	  					</div>
	  				</div>
  				</div>

	  			<div class="row">
	  				<div class="col-sm-12">
						<div class="progress">
							<div class="progress-bar progress-bar-danger progress-bar-striped" style="width:100%">
							</div>
						</div>
	  				</div>
	  			</div>
			<% else %>
				<% progress=0 %>
				<% if job.progress_max != 0 %>
					<% progress = job.progress_current / job.progress_max * 100; %>
					<% progress = progress.round %>
				<% end %>
	  			<div class="row">
	  				<div class="col-sm-12">
	  					<div class="progress-status text-primary">
	  						<%= job.description+": "+job.progress_current + '/' + job.progress_max %>
	  					</div>
	  				</div>
  				</div>

	  			<div class="row">
	  				<div class="col-sm-12">
						<div class="progress">
							<%= content_tag(:div, progress + "%", :style => "width:"+progress+"%;", :class => "progress-bar progress-bar-striped active") %>
							<!-- <div class="progress-bar progress-bar-danger"></div> -->
						</div>
	  				</div>
	  			</div>

			<% end %>


  		</div><!-- div class="job"> -->
  	<% end %>
  </div>
</div>