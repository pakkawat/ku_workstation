<!DOCTYPE html>
<html>
<head>
  <title>KuWorkstation</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<!-- Navigation section -->
<% if logged_in? %>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">

      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>



      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">

          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Personal Program<span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "Add Personal Program", new_personal_program_path %></li>
              <li><%= link_to "Personal Program List", personal_programs_path %></li>
            </ul>
          </li>

          <% if current_user.admin? %>

              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Program<span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to "Add Program", new_program_path %></li>
                  <li><%= link_to "Program List", programs_path %></li>
                </ul>
              </li>

              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Subject<span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to "Add Subject", new_subject_path %></li>
                  <li><%= link_to "Subject List", subjects_path %></li>
                </ul>
              </li>

              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">User<span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to "Add Users", new_ku_user_path %></li>
                  <li><a href="#">Teacher List</a></li>
                  <li><a href="#">Student List</a></li>
                  <li><%= link_to "All Users", ku_users_path %></li>
                </ul>
              </li>

              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Instance<span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="#">Teacher Instance</a></li>
                  <li><a href="#">Student Instance</a></li>
                  <li><%= link_to "All Instances", instances_path %></li>
                </ul>
              </li>
              <li><%= link_to "Job List", command_jobs_index_path %></li>
              <li><%= link_to "Logs", logs_path %></li>
              <li><a href="#">Contact</a></li>

          <% else %>

              <li><%= link_to current_user.ku_id, current_user %></li>

          <% end %>

              <li><%= link_to "Log out", logout_path, method: :delete %></li>

        </ul><!-- <ul class="nav navbar-nav"> -->


      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
<% else %>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">

          <li><%= link_to "Log in", login_path %></li>

        </ul><!-- <ul class="nav navbar-nav"> -->
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
<% end %>


<div class="container">
  <div class="row">
    <div class="col-md-12">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <%= yield %>
    </div>
  </div>
</div>
<!-- Footer -->
<footer class="footer">
  <div class="row">
    <div class="col-md-6 col-md-offset-2">
      <nav>
        <ul>
          <li>&copy; 2015 kasetsart university</li>
          <li>00123 320 000 123 456</li>
          <li>hello@ku.ac.th</li>
        </ul>
      </nav>
    </div>
  </div>
</footer>

</body>
</html>
