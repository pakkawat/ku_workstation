<div class="row chef-resource" data-id="<%= chef.id %>">
    <div class="well well-sm" style="background: #D8D8D8;">
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <label for="subject">
              Action:
            </label>
            <%= resource_type_full_name(chef.resource_type) %>
          </div>


          <div style="display: none;">
            <%= personal_program_expand_collapse_for(chef, @ku_user) %>
          </div>


          <div class="row">
            <div class="col-md-4 text-center">
              <button type="button" class="btn btn-info">Expand</button>
            </div>

            <div class="col-md-4 text-center">
              <%= link_to "Edit", edit_personal_program_personal_chef_resource_path(@personal_program, chef), :class => "btn btn-success" %>
            </div>

            <% if @personal_program.owner == current_user.id %>
              <div class="col-md-4 text-center">
                <%= form_for(@personal_program, :url => "/personal_programs/"+@personal_program.id.to_s+"/personal_program_chefs/"+chef.id.to_s, :method => :patch) do %>
                        <%= hidden_field_tag 'personal_program_id', @program.id  %>
                        <%= hidden_field_tag 'personal_chef_resource_id', chef.id  %>
                        <%= hidden_field_tag 'condition', "delete"  %>
                        <%= submit_tag "Delete", class: "btn btn-default pull-right" %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>

      </div>
    </div>

</div>
