<div class="row chef-resource" data-id="<%= chef.id %>">
    <div class="well well-sm" style="background: #D8D8D8;">
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <label for="subject">
              Action:
            </label>
            <%= resource_type_full_name(chef.resource_type) %>
          </div>


          <div style="display: none;">
            <%= personal_program_expand_collapse_for(chef, @ku_user) %>
          </div>


          <div class="row">
            <div class="col-md-4 text-center">
              <button type="button" class="btn btn-info">Expand</button>
            </div>
            <div class="col-md-4 text-center">
              <%= link_to "Edit", edit_personal_program_personal_chef_resource_path(@personal_program, chef), :class => "btn btn-success" %>
            </div>
            <div class="col-md-4 text-center">
              <%= button_to 'Delete', personal_program_personal_program_chef_path(@personal_program, chef), :class => "btn btn-default pull-right", :method => :delete  %>
            </div>
          </div>
        </div>

      </div>
    </div>

</div>
