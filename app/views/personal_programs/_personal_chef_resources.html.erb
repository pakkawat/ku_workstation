<div class="row chef-resource" data-id="<%= chef.id %>">
    <div class="well well-sm" style="background: #D8D8D8;">
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <label for="subject">
              Action:
            </label>
            <%= resource_type_full_name(chef.resource_type) %>

            <!-- Single button -->
            <div class="btn-group pull-right">
              <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Actions <span class="caret"></span>
              </button>
              <ul class="dropdown-menu">
                <li><a href="#">Expand</a></li>
                <li><%= link_to "Edit", edit_personal_program_personal_chef_resource_path(@personal_program, chef) %></li>
                <li><%= link_to("Delete", personal_program_personal_program_chef_path(personal_program_id: @personal_program.id, personal_chef_resource_id: chef.id, condition: "delete"), method: :patch) %></li>
              </ul>
            </div>

          </div>

          <div style="display: none;">
            <%= personal_program_expand_collapse_for(chef, @ku_user) %>
          </div>

        </div>

      </div>
    </div>

</div>
