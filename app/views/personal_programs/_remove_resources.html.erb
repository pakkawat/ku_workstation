<div class="row chef-resource">
    <div class="well well-sm" style="background: #D8D8D8;">
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <label for="subject">
              Action: Remove
            </label>
            <%= action_remove_personal_resource_name(chef.resource_type) %>
            <%= form_for(@personal_program, :url => "/personal_programs/"+@personal_program.id.to_s+"/personal_program_chefs/"+chef.id.to_s, :method => :delete) do %>
                    <%= hidden_field_tag 'personal_program_id', @program.id  %>
                    <%= hidden_field_tag 'personal_chef_resource_id', chef.id  %>
                    <%= submit_tag "Destroy", class: "btn btn-default pull-right" %>
            <% end %>
          </div>


          <div style="display: none;">
            <%= personal_program_expand_collapse_for(chef, @ku_user) %>
          </div>


          <div class="row">
            <div class="col-md-4 text-center">
              <button type="button" class="btn btn-info">Expand</button>
            </div>
            <div class="col-md-4 text-center">
              <%= link_to "Edit", edit_personal_program_personal_chef_resource_path(program_id: @personal_program.id, id: chef.id), :class => "btn btn-success" %>
            </div>
            <div class="col-md-4 text-center">
              <%= form_for(@personal_program, :url => "/personal_programs/"+@personal_program.id.to_s+"/personal_program_chefs/"+chef.id.to_s, :method => :patch) do %>
                      <%= hidden_field_tag 'personal_program_id', @program.id  %>
                      <%= hidden_field_tag 'personal_chef_resource_id', chef.id  %>
                      <%= hidden_field_tag 'condition', "add"  %>
                      <%= submit_tag "Add", class: "btn btn-default pull-right" %>
              <% end %>
            </div>
          </div>
        </div>

      </div>
    </div>

</div>
