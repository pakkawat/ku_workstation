<div>
    <div class="well well-sm" style="background: #D8D8D8;">
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <label for="subject">
              Action: Remove
            </label>
            <%= action_remove_personal_resource_name(chef.resource_type) %>
            <% if @personal_program.owner == current_user.id %>
              <%= link_to("Destroy", personal_program_personal_program_chef_path(personal_program_id: @personal_program.id, personal_chef_resource_id: chef.id), method: :delete, class: "btn btn-default pull-right") %>
            <% end %>
          </div>


          <div style="display: none;">
            <%= personal_program_expand_collapse_for(chef, @ku_user) %>
          </div>


          <div class="row">
            <div class="col-md-4 text-center">
              <button type="button" class="btn btn-info">Expand</button>
            </div>
            <div class="col-md-4 text-center">
              <%= link_to "Edit", edit_personal_program_personal_chef_resource_path(program_id: @personal_program.id, id: chef.id), :class => "btn btn-success" %>
            </div>
            <div class="col-md-4 text-center">
              <% if @personal_program.owner == current_user.id %>
                <%= link_to("Add", personal_program_personal_program_chef_path(personal_program_id: @personal_program.id, personal_chef_resource_id: chef.id, condition: "add"), method: :patch, class: "btn btn-default pull-right") %>
              <% else %>
                <%= link_to("Delete", delete_user_remove_resources_for_not_owner_path(personal_program_id: @personal_program.id, personal_chef_resource_id: chef.id), method: :patch, class: "btn btn-default pull-right") %>
              <% end %>
            </div>
          </div>
        </div>

      </div>
    </div>

</div>
