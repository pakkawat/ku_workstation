<div class="row chef-resource" data-id="<%= chef.id %>">
  <div class="col-sm-1"></div>
  <div class="col-sm-10">
    <div class="well" style="background: #D8D8D8;">
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <label for="subject">
              <%= chef.priority %> :
            </label>
            <%= resource_type_full_name(chef.resource_type) %>

            <!-- Single button -->
            <div class="btn-group pull-right">
              <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Actions <span class="caret"></span>
              </button>
              <ul class="dropdown-menu">
                <li><a href="#">Expand</a></li>
                <li><%= link_to "Edit", edit_program_chef_resource_path(program_id: @program.id, id: chef.id) %></li>
                <li><%= link_to("Delete", program_program_chef_path(program_id: @program.id, chef_id: chef.id, condition: "delete"), method: :patch) %></li>
              </ul>
            </div>

          </div>


          <div style="display: none;">
            <%= expand_collapse_for(chef, @program) %>
          </div>

        </div>

      </div>
    </div>
  </div>
  <div class="col-sm-1"></div>
</div>
