<div class="row">
<div class="col-md-6 col-md-offset-3">
<%= form_for @program do |f| %>
<%= render 'shared/error_messages', object: f.object %>
<fieldset>
	<div id="legend">
		<legend class="">Add new program</legend>
	</div>
    <div class="control-group">
            <%= f.label :program_name,'Program Name', class: "control-label" %>
            <div class="controls">
                    <%= f.text_field :program_name, class: "form-control input-lg" %>
                    <p class="help-block">Please provide program name</p>
            </div>
    </div>

    <div class="control-group">
            <%= f.label :note,'Program note', class: "control-label" %>
            <div class="controls">
                    <%= f.text_area(:note, rows: 15, class: 'form-control') %>
            </div>
    </div>

</fieldset>
<% end %>
</div><!-- <div class="col-md-6 col-md-offset-3"> -->
</div><!-- <div class="row"> -->
