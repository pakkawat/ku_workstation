<div class="row">
<div class="col-md-6 col-md-offset-3">
<%= form_for @program do |f| %>
<%= render 'shared/error_messages', object: f.object %>
<fieldset>
	<div id="legend">
		<legend class="">
            <% if @program.persisted? %>
                Update program information
            <% else %>
                Add new program
            <% end %>
        </legend>
	</div>
    <div class="control-group">
            <%= f.label :program_name,'Program Name', class: "control-label" %>
            <div class="controls">
                    <%= f.text_field :program_name, class: "form-control input-lg" %>
                    <p class="help-block">Please provide program name</p>
            </div>
    </div>

    <div class="control-group">
            <%= f.label :note,'Program note', class: "control-label" %>
            <div class="controls">
                    <%= f.text_area(:note, rows: 15, class: 'form-control') %>
            </div>
    </div>
    <br>
    <div class="chef-resources">
            <% f.fields_for :chef_resources do |builder| %>
                    <%= render 'chef_resource_fields', :f => builder %>
            <% end %>
            <%= link_to_add_fields "Add Action", f, :chef_resources %>
    </div>
    <div class="control-group" align="center">
    <!-- Button -->
            <div class="controls">
                <% if @program.persisted? %>
                    <%= f.submit "Update program", class: "btn btn-primary" %>
                <% else %>
                    <%= f.submit "Add program", class: "btn btn-success" %>
                <% end %>
            </div>
    </div>
</fieldset>
<% end %>
</div><!-- <div class="col-md-6 col-md-offset-3"> -->
</div><!-- <div class="row"> -->
