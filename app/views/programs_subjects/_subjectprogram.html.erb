<tr>
	<th scope="row">
		<% programs_subject = program.programs_subjects.where(subject_id: @subject.id).first %>
		<% if programs_subject.state != "none" %>
			<% if programs_subject.state == "uninstall" %>
				<span class="label label-danger">uninstall</span>
			<% else %>
				<span class="label label-success"><%= programs_subject.state %></span>
			<% end %>
		<% end %>
	</th>
	<td><%= link_to program.program_name, program %></td>
	<td><%= program.note %></td>
	<td>
<%= form_for subject_programs_subjects_path, :html => {:method => :delete} do %>
        <%= hidden_field_tag 'program_id', program.id  %>
        <%= hidden_field_tag 'subject_id', @subject.id  %>
        <%= submit_tag "delete", class: "btn btn-default" %>
<% end %>
		<% if programs_subject.state == "uninstall" %>
			<%= button_to 'Add', add_program_to_subject_path(@subject, program), :class => "btn btn-default", :method => :post %>
		<% else %>
			<%= button_to 'Delete', subject_programs_subject_path(@subject, programs_subject), :class => "btn btn-default", :method => :delete %>
		<% end %>
	</td>
</tr>
