<% if object.errors.any? %>
  <div class="panel panel-danger" id="error_explanation">
    <div class="panel-heading">
      The form contains <%= pluralize(object.errors.count, "error") %>.
    </div>
    <ul>
    <% object.errors.each do |attr, msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
